{
  "mcpServers": {
    "cortex": {
      "type": "stdio",
      "command": "python",
      "args": ["-m", "cortex_mcp.server"],
      "env": {
        "CORTEX_PORT": "${CORTEX_PORT:-}",
        "CORTEX_BAUD": "${CORTEX_BAUD:-115200}",
        "CORTEX_TIMEOUT": "${CORTEX_TIMEOUT:-5}"
      }
    }
  }
}
